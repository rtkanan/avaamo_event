= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :starttime
    = f.text_field :starttime
  .field
    = f.label :endtime
    = f.text_field :endtime
  .field
    = f.label :allday
    = f.text_field :allday
  .field
    = f.label :is_complete
    = f.check_box :is_complete
  .actions
    = f.submit 'Save'
